        android:supportsRtl="true"
        android:theme="@style/Theme.CareerAdviser"
        tools:targetApi="31">
        <activity
            android:name=".LearningRoute.ViewActivity"
            android:exported="false" />
        <activity
            android:name=".SplashScreen.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProductTour.ProductTourFourthActivity"
            android:exported="false" />
        <activity
            android:name=".ProductTour.ProductTourThirdActivity"
            android:exported="false" />
        <activity
            android:name=".ProductTour.ProductTourSecondActivity"
            android:exported="false" />
        <activity
            android:name=".ProductTour.ProductTourMainActivity"
            android:exported="false" />
        <activity
            android:name=".LearningRoute.NegativeDecisionActivity"
            android:exported="false" />
        <activity
            android:name=".LearningRoute.LearningRouteActivity"
            android:exported="false" />
        <activity
            android:name=".LearningRoute.PositiveDecisionActivity"
            android:exported="false" />
        <activity
            android:name=".LearningRoute.AddCareerActivity"
            android:exported="false" />
        <activity
