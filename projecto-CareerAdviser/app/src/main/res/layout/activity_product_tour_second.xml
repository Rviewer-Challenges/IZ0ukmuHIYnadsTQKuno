<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/producttour_2"
    tools:context=".ProductTour.ProductTourSecondActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/product_tour_bg"
        android:gravity="center">

        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/input_base"
            android:maxWidth="275dp"
            android:padding="10dp"
            android:text="         ¡Aporte valor a la comunidad! \n\n Tras introducir valores válidos, siga adelante rellenando datos usando el botón de la derecha o bien regrese atrás usando el botón de la izquierda.\n                                                           (2/4)"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/product_tour_2_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:textSize="12dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/input_base"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>