<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#DAA164"
    app:cardElevation="8dp"
    android:padding="10dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="start">

        <TextView
            android:id="@+id/item_view_job_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cargo: "
            android:textSize="24dp"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:padding="25dp"/>

        <TextView
            android:id="@+id/item_view_process_years"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="25dp"
            android:text="DuraciÃ³n del proceso:"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:layout_marginLeft="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_view_description"
            android:layout_width="800dp"
            android:layout_height="100dp"
            android:maxWidth="800dp"
            android:text="AAAAAAAAAAAAAAAAAAAAAAA"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="15dp"/>

        <Button
            android:id="@+id/item_view_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="IR"
            android:textSize="30dp"
            android:backgroundTint="@color/black"
            android:gravity="center"/>
    </LinearLayout>



</androidx.cardview.widget.CardView>